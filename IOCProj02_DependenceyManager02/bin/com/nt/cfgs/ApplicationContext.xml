<?xml version="1.0" encoding="UTF-8"?>
          
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans.xsd">
           
           <!-- @Depandency Spring Beans class configuration-->
           <bean id="ldate" class="java.time.LocalDate" factory-method="now"/>
           
           <!-- Target Spring bean class Config -->
           <bean id="sm" class="com.nt.sbeans.SessionInfo">
           <!-- Config time property for setter Injection-->
           <property name="date" ref="ldate"/>
           
           </bean>
          
          </beans>